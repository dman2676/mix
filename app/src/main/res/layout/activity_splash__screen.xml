<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.truavidity.dman26.djblue.Fragments.MainFragment"
    android:background="@drawable/dj_bluegradient">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">




        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="#253748"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="67dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/djblue_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cafe_mocha"
                android:textSize="45dp"
                android:textColor="#4713d5" />



        </android.support.v7.widget.Toolbar>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/djsplash"
            android:layout_gravity="fill_vertical|center_horizontal|center" />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Dlittle of tru-avidity.com"
            android:fontFamily="cursive"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="100dp"
            android:textColor="@android:color/white" />


    </LinearLayout>
</FrameLayout>